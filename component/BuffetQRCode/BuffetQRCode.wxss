.buffet-QR-code {
    position: relative;
    display: flex;
    width: 100%;
    height: 150rpx;
    margin-top: 32rpx;
}

.buffet-QR-code-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 36rpx;
    height: 150rpx;
    width: 100%;
    border-top: 1px solid #EDEDED;
    background-color: #fff;
}

.licon-and-text {
    display: flex;
    align-items: center;
}

.licon {
    margin-right: 22rpx;
    height: 94rpx;
    width: 80rpx;
    background: url(https://imgorder.kfc.com.cn/mwos/Version/buffet-icon1.png) no-repeat center center;
    background-size: 100% 100%;
}

.ltext {
    font-size: 28rpx;
    color: #404040;
    font-family: "微软雅黑","华文细黑",Arial,Helvetica,sans-serif;
    font-weight: bold;
}

.ricon {
    margin-right: 10rpx;
    width: 80rpx;
    height: 80rpx;
    background: url(https://imgorder.kfc.com.cn/mwos/Version/buffet-icon2.png) no-repeat center center;
    background-size: 100% 100%;
}

.buffet-QR-code-guide-bg {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 103;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,0.60);
    -webkit-backdrop-filter: blur(4rpx);
}

.buffet-QR-code-guide-btandtext {
    position: absolute;
    top: -101.6rpx;
    left: 0;
    width: 100%;
    height: 417.2rpx;
    z-index: 105;
}

.tips-wrapper {
    margin-right: 48rpx;
    margin-bottom: 18rpx;
    height: 84rpx;
}

.tips-text {
    font-size: 24rpx;
    color: #FFFFFF;
    text-align: right;
}

.tips-icon-wrapper {
    text-align: right;
}

.tips-icon {
    display: inline-block;
    width: 16rpx;
    height: 38rpx;
    margin-top: 8rpx;
    margin-right: 29rpx;
}

.tips-icon-line {
    margin: 0 auto;
    width: 0;
    height: 22rpx;
    border-right: 1px dashed #fff;
}

.tips-icon-triangle {
    width: 0;
    height: 0;
    border-width: 16rpx 9rpx 0 9rpx;
    border-style: solid;
    border-color: #fff transparent transparent transparent;
}

.guide-button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 264rpx auto 0 auto;
    width: 200rpx;
    height: 69.6rpx;
    background-color: rgba(255,255,255,0.20);
    border-radius: 34.8rpx;
    border: 1px solid #FFFFFF;
    font-size: 32rpx;
    color: #FFFFFF;
    box-sizing: border-box;
}

.buffet-QR-code-main-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 103;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background: rgba(0,0,0,0.60);
    -webkit-backdrop-filter: blur(4rpx);
    transition: all 0.4s ease;
}

.buffet-QR-code-main-wrapper-hidden {
    opacity: 0;
    pointer-events: none;
}

.buffet-QR-code-main-close {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    margin: 0 auto 56rpx auto;
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    border: 3rpx solid #fff;
    pointer-events: none;
}

.buffet-QR-code-main-close::before {
    position: absolute;
    display: block;
    content: ' ';
    height: 4rpx;
    width: 30rpx;
    background-color: #fff;
    transform: rotate(45deg);
}

.buffet-QR-code-main-close::after {
    position: absolute;
    display: block;
    content: ' ';
    width: 4rpx;
    height: 30rpx;
    background-color: #fff;
    transform: rotate(45deg);
}

.buffet-QR-code-main {
    background-color: #fff;
    text-align: center;
    transition: all 0.4s ease;
}

.buffet-QR-code-main-hidden {
    transform: translateY(100%);
}

.buffet-QR-code-main-header {
    line-height: 52rpx;
    padding: 24rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    background-color: #D62F35;
}

.buffet-QR-code-main-content {
    height: 706rpx;
    overflow: hidden;
}

.buffet-qrcode {
    margin: 106rpx auto 0;
}

.buffet-QR-code-main-content-tips {
    margin-top: 32rpx;
    font-size: 32rpx;
    color: #404040;
}

.no-qrcode-text {
    margin-top: 280rpx;
    font-size: 32rpx;
    color: #404040;
}