.guide-container {
    position: fixed;
    height: 100%;
    width: 100%;
    display: flex;
    z-index: 5;
    flex-direction: column;
    align-items: center;
    background-color: rgba(0,0,0,0.6);
    -webkit-backdrop-filter: blur(4rpx);
}

.guide-image-view {
    width: 100%;
    height: 600rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    position: fixed;
    top: 244rpx;
}

.guide-image0 {
    width: 90rpx;
    height: 50rpx;
    margin-right: 42rpx;
}

.guide-border-view {
    height: 125rpx;
    border: 4rpx dashed white;
    border-radius: 10rpx;
    width: 200rpx;
}

.guide-image-view2 {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
}

.guide-image1 {
    height: 100px;
    width: 600rpx;
}

.guide-button {
    margin: 20rpx auto;
    padding: 20rpx 0;
    border: 4rpx solid #FFFFFF;
    border-radius: 12rpx;
    width: 250rpx;
    text-align: center;
}