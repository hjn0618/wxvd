.upgrade-container {
    position: fixed;
    height: 100%;
    width: 100%;
    display: flex;
    z-index: 3;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(0,0,0,0.6);
    -webkit-backdrop-filter: blur(4rpx);
}

.upgrade-v {
    position: relative;
    width: 592rpx;
    padding: 0 48rpx;
    background-color: #fff;
    display: flex;
    border-radius: 20rpx;
    flex-direction: column;
    align-items: center;
}

.spot {
    width: 16rpx;
    height: 16rpx;
    background: #d62f35;
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: -8rpx;
}

.spot::after {
    content: '';
    position: absolute;
    top: 0;
    left: -32rpx;
    width: 16rpx;
    height: 16rpx;
    background: #d62f35;
}

.spot::before {
    content: '';
    position: absolute;
    top: 0;
    left: 32rpx;
    width: 16rpx;
    height: 16rpx;
    background: #d62f35;
}

.img {
    margin: 52rpx 0 10rpx;
    width: 480rpx;
    height: 360rpx;
}

.upgrade-title {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    color: #d62f35;
    font-size: 52rpx;
    font-weight: 500;
}

.upgrade-money {
    font-size: 38rpx;
    font-weight: 500;
}

.upgrade-description {
    display: flex;
    justify-content: center;
    width: 444rpx;
    margin: 20rpx 0 26rpx;
    font-size: 28rpx;
    color: #606060;
    font-weight: 500;
}

.upgrade-ok {
    text-align: center;
    width: 444rpx;
    font-size: 32rpx;
    line-height: 64rpx;
    color: #fff;
    font-weight: 500;
    background-color: #d62f35;
    border-radius: 10rpx;
}

.upgrade-remind {
    width: 140rpx;
    margin: 22rpx auto 12rpx;
    text-align: center;
    font-size: 18rpx;
    line-height: 38rpx;
    color: #606060;
}

.upgrade-close {
    width: 110rpx;
    height: 112rpx;
    margin-top: 36rpx;
    background: url("https://imgorder.kfc.com.cn/mwos/Version/icon-upgrade-close.png") no-repeat center center;
    background-size: 110rpx 112rpx;
}