.tooltip-wrapper {
    position: absolute;
    left: 50%;
    top: 75rpx;
    transform: translate3d(-50%,0,0);
    opacity: 0;
}

.tooltip-wrapper:after {
    content: '';
    position: absolute;
    top: -8rpx;
    left: 50%;
    width: 20rpx;
    height: 20rpx;
    background: #3D3D3D;
    transform: translate3d(-50%,0,0) rotate(45deg);
}

.tooltip-wrapper .tooltip-content {
    height: 64rpx;
    background: #3D3D3D;
    border-radius: 32rpx;
    padding: 0 20rpx 0 40rpx;
    line-height: 64rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.tooltip-wrapper .tooltip-content:before {
    content: '';
    position: absolute;
    top: -8rpx;
    left: -4rpx;
    width: 30rpx;
    height: 20rpx;
    background: url("https://imgorder.kfc.com.cn/mwos/Version/icon-leaf_01.png") no-repeat left top;
    background-size: contain;
}

.tooltip-wrapper .tooltip-content:after {
    content: '';
    position: absolute;
    right: -10rpx;
    bottom: 0;
    width: 30rpx;
    height: 20rpx;
    background: url("https://imgorder.kfc.com.cn/mwos/Version/icon-leaf_01.png") no-repeat left top;
    background-size: contain;
}

.tooltip-wrapper .tooltip-content .message {
    font-size: 24rpx;
    color: #FFFFFF;
    white-space: nowrap;
}

.tooltip-wrapper .tooltip-content .close {
    padding: 20rpx;
}

.tooltip-wrapper .tooltip-content .close .k-close {
    width: 24rpx;
    height: 24rpx;
    font-size: 24rpx;
    color: #C0C0C0;
    background: url("data:image/png;base64,") no-repeat center center;
    background-size: 24rpx;
}