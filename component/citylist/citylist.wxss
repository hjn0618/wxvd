.quick {
    padding-top: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-indent: 25rpx;
    font-size: 24rpx;
    font-family: "微软雅黑","华文细黑",Arial,Helvetica,sans-serif;
    color: #808080;
}

.quick-t {
    border-top: 18rpx solid #f2f2f2;
}

.city-item {
    color: #404040;
    width: 100%;
    background-color: #fff;
    text-indent: 25rpx;
    line-height: 100rpx;
    height: 100rpx;
    font-size: 32rpx;
    font-family: "微软雅黑","华文细黑",Arial,Helvetica,sans-serif;
}

.city-slide {
    position: absolute;
    top: 65rpx;
    right: 0;
    opacity: 0.55;
    display: flex;
    font-size: 20rpx;
    height: 100%;
    z-index: 100;
}

.city-slide-inner {
    height: 90%;
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
}

.quick-slide {
    flex: 1;
    text-align: center;
    color: #000;
    padding: 0 5px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.gps-city {
    text-indent: 25rpx;
    font-family: "微软雅黑","华文细黑",Arial,Helvetica,sans-serif;
    font-size: 36rpx;
}

.gps-city .msg {
    font-size: 24rpx;
    color: #808080;
    line-height: 80rpx;
}

.cityfn {
    display: flex;
    line-height: 100rpx;
    margin-bottom: -10rpx;
}

.cityfn .nowCityName {
    color: #404040;
    font-size: 32rpx;
    flex: 1;
}

.cityfn .gps-city-t {
    font-size: 24rpx;
    color: #808080;
    text-align: right;
    flex: 1;
    margin-right: 20rpx;
}

.cityfn .img {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    background: url(data:image/png;base64,) center center no-repeat;
    background-size: 40rpx 40rpx;
    position: relative;
    top: 10rpx;
    right: 5rpx;
}

.city-section-v1 {
    display: flex;
    flex-direction: column;
    background: #fff;
    overflow-y: scroll;
    overflow: hidden;
    flex: 1;
}

.city-section-v2 {
    width: 100%;
    height: 100%;
    border-top: 18rpx solid #f2f2f2;
}

.display-none {
    display: none;
}

.city-section-all {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.city-section-v3 {
    flex: 1;
    display: flex;
    position: relative;
}