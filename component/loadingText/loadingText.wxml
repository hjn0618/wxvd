<template name="loadingText">
    <view class="loading-outer" style="display:{{visiableText?'block':'none'}}">
        <view class="loading-bg-text"></view>
        <view class="loading-top-text">
            <view class="loading-animate-text">
                <view class="loading1"></view>
                <view class="loading2"></view>
                <view class="loading3"></view>
                <view class="loading4"></view>
            </view>
            <view class="loading-text">{{text}}</view>
        </view>
    </view>
</template>
