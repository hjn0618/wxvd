.lucky-bag-outer {
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 50;
    background: rgba(0,0,0,0.5);
    overflow: hidden;
    position: fixed;
}

.lucky-bag-wapper {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 478rpx;
    text-align: center;
    margin: 0 auto;
    background: #ca253b;
    box-shadow: 0 -8rpx 8rpx 0 rgba(0,0,0,0.06);
    border-radius: 40rpx 40rpx 0 0;
    display: flex;
    flex-direction: column;
    padding: 40rpx 40rpx 32rpx 40rpx;
    box-sizing: border-box;
}

.lucky-bag-wapper-title {
    position: absolute;
    width: 512rpx;
    height: 94rpx;
    left: 50%;
    top: 16rpx;
    transform: translate3d(-50%,-50%,0) scale(1);
    background: url("https://imgorder.kfc.com.cn/mwos/Version/icon-lucky-bag-paysuccess-top.png") no-repeat;
    background-size: 100% 100%;
    letter-spacing: 0;
    line-height: 94rpx;
    font-size: 28rpx;
    color: #fcd660;
    letter-spacing: 0;
    text-align: center;
    line-height: 94rpx;
}

.lucky-bag-wapper-content {
    background: #ffffff;
    height: 406rpx;
    margin-top: 17rpx;
    border-radius: 16rpx;
    box-shadow: 0 0 8rpx 0 rgba(159,37,46,0.2);
    position: relative;
}

.lucky-bag-wapper-content-item {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.lucky-bag-wapper-content-item-img-wapper {
    display: flex;
    margin: 10rpx 8rpx 8rpx 8rpx;
    position: relative;
}

.lucky-bag-wapper-content-item-img-wapper-img {
    box-sizing: border-box;
    width: 320rpx;
    height: 240rpx;
}

.lucky-bag-wapper-content-item-img-wapper-discount {
    display: flex;
    align-items: baseline;
    position: absolute;
    left: 0;
    top: 0;
    width: auto;
    text-align: center;
    font-size: 24rpx;
    color: #da4248;
    letter-spacing: -1.2rpx;
    line-height: 80rpx;
}

.lucky-bag-wapper-content-item-img-wapper-discount-num {
    font-size: 48rpx;
}

.ucky-bag-wapper-content-item-product-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between!important;
    align-items: center;
    margin: 10rpx 8rpx 8rpx 8rpx;
    position: relative;
}

.lucky-bag-wapper-content-item-product-info-name {
    display: flex;
    font-size: 32rpx;
    font-weight: 700;
    width: 100%;
    align-items: center;
    color: #333333;
    display: block;
    text-align: left;
    white-space: normal;
    word-wrap: break-word;
    letter-spacing: 1rpx;
}

.lucky-bag-wapper-content-item-product-info-price {
    display: flex;
    align-items: baseline;
    width: 100%;
    margin-top: 12rpx;
    font-size: 80rpx;
    text-align: left;
    font-weight: 700;
    justify-content: flex-start;
}

.lucky-bag-wapper-content-item-product-info-price-big {
    line-height: 80rpx;
    color: #d62f35;
    height: 80rpx;
}

.lucky-bag-wapper-content-item-product-info-price-small {
    display: inline-block;
    font-size: 28rpx;
    color: #999999;
    line-height: 40rpx;
    margin-left: 16rpx;
    text-decoration: line-through;
}

.lucky-bag-wapper-content-item-product-info-price-big-yuan {
    font-size: 56rpx;
}

.lucky-bag-wapper-content-item-product-info-detail {
    flex: 1;
    display: flex;
    align-items: center;
    width: 290rpx;
    font-size: 16rpx;
    color: #666666;
    letter-spacing: 0;
    justify-content: center;
    margin-top: 28rpx;
}

.lucky-bag-wapper-content-item-product-info-detail-left {
    text-align: left;
}

.lucky-bag-wapper-content-item-product-info-detail-link {
    width: auto;
    height: 34rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #666666;
    text-align: center;
}

.lucky-bag-wapper-content-item-product-info-detail-arrow-right {
    display: block;
    width: 24rpx;
    height: 24rpx;
    margin: 2rpx auto 0 2rpx;
}

.lucky-bag-wapper-content-buy-btn {
    position: absolute;
    display: flex;
    bottom: 28rpx;
    left: 50%;
    margin-left: -287rpx;
    justify-content: center;
}

.lucky-bag-wapper-content-buy-btn-buy {
    width: 574rpx;
    height: 88rpx;
    background: #ca253b;
    box-shadow: 0 8rpx 16rpx 0 rgba(203,38,60,0.5);
    border-radius: 44rpx;
    font-size: 32rpx;
    color: #ffffff;
    line-height: 88rpx;
    letter-spacing: 0;
    text-align: center;
}

.lucky-bag-wapper-content-buy-btn-buy-hover {
    background: #AB1F32;
}

.lucky-bag-wapper-close {
    position: absolute;
    width: 48rpx;
    height: 48rpx;
    top: -100rpx;
    right: 24rpx;
}