.greyscreen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
    background: rgba(0,0,0,0.60);
}

.myCanvas-wrapper {
    width: 100%;
    height: 480rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 12;
    background: #FFFFFF;
    overflow-y: auto;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.myCanvas-movie-view {
    position: absolute;
    width: 100%;
    bottom: 20rpx;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 24rpx;
    font-weight: bold;
    color: #888888;
    text-align: center;
}

.myCanvas-movie-image {
    margin-right: 4rpx;
    width: 20rpx;
    height: 28rpx;
}

.myCanvas {
    width: 660rpx;
    height: 380rpx;
    margin: 0 0 20rpx 0;
}

.myCanvas-close {
    width: 150rpx;
    height: 70rpx;
    background: url("data:image/png;base64,") no-repeat 100rpx center;
    background-size: 30rpx;
    position: absolute;
    top: 1rpx;
    right: 2rpx;
}

.myCanvas-title {
    font-size: 26rpx;
    color: #888888;
    font-weight: 400;
    line-height: 80rpx;
    height: 80rpx;
}