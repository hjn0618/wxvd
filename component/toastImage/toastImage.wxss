.background {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 1000;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.foreground {
    width: 560rpx;
    background: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10rpx;
    position: relative;
}

.top-view {
    display: flex;
    margin: 50rpx;
}

.top-view image {
    width: 50rpx;
    height: 50rpx;
}

.toastView_bg_image {
    width: 100%;
    height: 60%;
    position: relative;
    z-index: 99;
}

.qrcode-view {
    justify-content: center;
    display: flex;
    flex-direction: column;
    margin-right: 20rpx;
    margin-bottom: 10rpx;
}

.qrcode-view text {
    font-size: 19rpx;
    color: lightgray;
    text-align: center;
}

.image {
    width: 220rpx;
    height: 220rpx;
    margin-bottom: 10rpx;
}

.close {
    width: 46rpx;
    height: 46rpx;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    z-index: 100;
}

.save {
    position: absolute;
    bottom: 60rpx;
    width: 440rpx;
    height: 70rpx;
    z-index: 99;
}

.bottom-view {
    display: flex;
    align-items: space-betwee;
    flex-direction: row;
}

.title-view {
    display: flex;
    justify-content: center;
    align-items: center;
}

.title {
    font-size: 30rpx;
    margin-left: 50rpx;
    margin-right: 20rpx;
}

.main-image {
    width: 70%;
    height: 70%;
    border-radius: 20rpx;
}

.diy_share_btn {
    display: flex;
    justify-content: center;
}

.diy_share_btn_common {
    width: 270rpx;
    height: 82rpx;
    background: #d62f35;
    border-radius: 23.5rpx;
    font-size: 24rpx;
    line-height: 82rpx;
    color: #fff;
    text-align: center;
    margin: 117.4rpx 30rpx 0 30rpx;
}

.diy_share_btn_doSelf {
    background-color: lightgray;
}